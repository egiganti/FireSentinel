# FireSentinel Patagonia - Environment Variables
# Copy to .env and fill in your values

# NASA FIRMS API key (free: https://firms.modaps.eosdis.nasa.gov/api/map_key/)
FIRMS_MAP_KEY=

# Telegram Bot (create via @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=

# Twilio (WhatsApp alerts - optional for MVP)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=

# Database (leave empty for SQLite in dev)
DATABASE_URL=

# Dashboard admin password
ADMIN_PASSWORD=

# Environment: dev | staging | prod
ENVIRONMENT=dev
